{
  "name": "electron-demo",
  "version": "1.0.0",
  "private": true,
  "homepage": ".",
  "author": "wangjikun",
  "description": "Grid Calibration",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^5.0.2",
    "antd-img-crop": "^4.5.1",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "electron-is-dev": "^2.0.0",
    "http-proxy-middleware": "^2.0.6",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "concurrently \"wait-on http://127.0.0.1:3000 && electron .\" \"cross-env BROWSER=none yarn start\"",
    "package": "yarn build && yarn deploy",
    "deploy": "electron-builder build --win --x64"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^21.3.1",
    "electron-builder": "^23.6.0",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.electron.myapp",
    "productName": "Grid Calibration",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "settings/**/*",
      "package.json",
      "main.js",
      "./src/**/*",
      "./src/AppWindow.js",
      "./src/setupProxy.js"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon":"grid.ico"
    },
    "dmg": {
      "background": "public/appdmg.jpg",
      "icon": "public/favicon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./favicon.ico",
      "uninstallerIcon": "./favicon.ico",
      "installerHeaderIcon": "./favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false,
      "shortcutName": "Grid Calibration"
    },
    "linux": {
      "target": "deb"
    }
  }
}
